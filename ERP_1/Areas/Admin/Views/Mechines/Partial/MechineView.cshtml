
@model DTO.mechineDTO
<div class="box-body">
    <div class="form-group">
        <label>index number to mechine recognision</label>
        @Html.TextBoxFor(x => x.MechID, new { @class = "form-control", @placeholder = "number to rcognized the mechine", @type = "number" })


    </div>

    <div class="form-group">
        <label>discription to mechine</label>
        @Html.TextBoxFor(x => x.Description, new { @class = "form-control", @placeholder = "few word to describe mechine condition or operation notice" })


    </div>

    <div class="form-group">
        <label>condition whether it is down </label>
        @Html.DropDownList("IsDown", new SelectList(new[] { "True", "False" }), new { @class = "form-control select1" })


    </div>

    <div class="form-group">
        <label>Type of a mechine</label>
        <label>
            2- Withering
            3- Rolling
            4- Fermantation
            5- Drying
            6- Grading
            9- Colour Soarting
            10- Furnace
        </label>
        @Html.DropDownList("Type", new SelectList(new[] { "2", "3", "4", "5", "6", "9", "10" }), new { @class = "form-control select1", @typr = "number" })

    </div>

    <div class="form-group">
        <label>active range in hourse</label>
        @Html.TextBoxFor(x => x.active_range, new { @class = "form-control", @placeholder = "operating range: hours", @type = "number", @min = "1" })


    </div>


    <div class="form-group">
        <label>labourer ID</label>
        @Html.TextBoxFor(x => x.LabourID, new { @class = "form-control", @placeholder = "Labour ID", @type = "number", @min = "1" })


    </div>

    <input type="number" name="ID" value="@Model.ID" hidden />
    <div class="card-footer">
        <button type="submit" class="btn btn-primary">Save</button>


    </div>
</div>
